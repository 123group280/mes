                                        <option type="boldTextRepresentationOnDisabled" value="true"/>
                                    </component>
                                </layoutElement>
                            </component>
                            <component type="borderLayout"
                                       name="borderLayoutTotalTechnicalProductionCosts"
                                       reference="borderLayoutTotalTechnicalProductionCosts">
